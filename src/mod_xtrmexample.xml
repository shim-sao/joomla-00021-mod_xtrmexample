<?xml version="1.0" encoding="UTF-8" ?>
<extension type="{{extension.type}}" version="{{version.framework}}" method="upgrade" client="{{extension.client_id}}">
  <!-- Extension author informations -->
  <author>{{author.name}}</author>
  <authorEmail>{{author.email}}</authorEmail>
  <authorName>{{author.name}}</authorName>
  <authorUrl>{{author.url}}</authorUrl>

	<name>{{extension.name}}</name>
	<element>{{extension.element}}</element>
	<version>{{version.build}}</version>
	<creationDate>{{date.today}}</creationDate>
	<packager>{{packager.name}}</packager>
	<packagerurl>{{packager.url}}</packagerurl>
	<copyright>{{common.copyright}}</copyright>
	<license>{{common.license_url}}</license>
	<description>{{EXTENSION.ELEMENT}}_XML_DESCRIPTION</description>

	<!-- Set module namespace -->
	<namespace>Joomla\Module\XtrmExample</namespace>

	<!-- Runs on install/uninstall/update -->
	<scriptfile>script.php</scriptfile>

	<!-- Set help -->
	<!-- <help key="JHELP_EXTENSIONS_MODULE_MANAGER_XTRMEXAMPLE" /> -->

	<!-- Main File Copy -->
	<files>
		<folder>Helper</folder>
		<folder>tmpl</folder>
		<filename module="{{extension.element}}">{{extension.element}}.php</filename>
		<filename>{{extension.element}}.xml</filename>
	</files>

	<!-- Language File Copy -->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.{{extension.element}}.ini</language>
		<language tag="en-GB">en-GB/en-GB.{{extension.element}}.sys.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.{{extension.element}}.ini</language>
		<language tag="fr-FR">fr-FR/fr-FR.{{extension.element}}.sys.ini</language>
	</languages>

	<!-- Media files -->
	<media folder="media" destination="{{extension.element}}">
		<folder>css</folder>
		<folder>image</folder>
		<folder>js</folder>
	</media>

	<!-- Configuration of the module -->
	<config>
		<!-- Basic parameters of the module -->
		<fields name="params">
			<fieldset name="basic">
			</fieldset>
		
			<!-- Advanced parameters of the module -->
			<fieldset name="advanced">
				<field
					name="tag_id"
					type="text"
					description="{{EXTENSION.ELEMENT}}_FIELD_TAG_ID_DESC"
					label="{{EXTENSION.ELEMENT}}_FIELD_TAG_ID_LABEL"
				/>

				<field
					name="class_sfx"
					type="text"
					description="{{EXTENSION.ELEMENT}}_FIELD_CLASS_DESC"
					label="{{EXTENSION.ELEMENT}}_FIELD_CLASS_LABEL"
				/>

				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					class="custom-select"
				/>

				<field
					name="moduleclass_sfx"
					type="textarea"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					rows="3"
				/>

				<field
					name="cache"
					type="list"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					default="1"
					filter="integer"
					>
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="number"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					default="900"
					filter="integer"
				/>

				<field
					name="cachemode"
					type="hidden"
					default="itemid"
					>
					<option value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>

	<!-- Extension Update Specification -->
	<updateservers>
		<server name="XtrmAddons - {{extension.name}} Update" priority="1" type="extension">{{remote.update_url}}</server>
	</updateservers>
</extension>